<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="52dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/Out"
        app:layout_constraintStart_toStartOf="@+id/Person"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/Invsible"
        android:layout_gravity="clip_horizontal"
        app:srcCompat="@drawable/ic_person_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="clip_horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@+id/Out"
        app:layout_constraintStart_toEndOf="@+id/Person"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:textColor="@color/White"/>

    <ImageButton
        android:id="@+id/Out"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/Invsible"
        app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />


</android.support.constraint.ConstraintLayout>