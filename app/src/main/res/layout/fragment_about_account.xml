<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutAccount"
    android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="411dp"
            android:layout_height="52dp"
            android:src="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/Out"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:layout_gravity="clip_horizontal"
            android:layout_marginEnd="25dp"
            android:text="Сергей Владимирович"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/account"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/White"/>

        <ImageButton
            android:id="@+id/account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/Invsible"
            app:srcCompat="@drawable/ic_person_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,VectorDrawableCompat"
            />

    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="0dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменение пароля"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/Invsible"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="0dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменение логина"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/Invsible"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="0dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="История посещений"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/Invsible"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="0dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация о приложении"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/Invsible"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="0dp"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выход"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/Invsible"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </android.support.v7.widget.CardView>


</LinearLayout>