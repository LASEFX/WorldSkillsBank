<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Account">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="52dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/Out"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/goback1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/Invsible"
            android:layout_gravity="clip_horizontal"
            app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds,MissingConstraints,VectorDrawableCompat" />


            <TextView
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_gravity="clip_horizontal"
        android:layout_marginEnd="25dp"
        android:text="Сергей Владимирович"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/account"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:textSize="20dp"
                android:textColor="@color/White"/>

    <ImageButton
        android:id="@+id/account"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/Invsible"
        app:srcCompat="@drawable/ic_person_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:backgroundTint="@color/Yellow">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дебетовая карта"
                android:textColor="@color/Black"
                android:textSize="15dp"/>

            <TextView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234****4321"
                android:textColor="@color/Black"
                android:textSize="15dp"/>

            <TextView
                android:layout_marginTop="90dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22000,00 рублей"
                android:textColor="@color/Black"
                android:textSize="15dp"/>

            <TextView
                android:layout_marginTop="80dp"
                android:layout_marginLeft="230dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="МИР"
                android:textColor="@color/Black"
                android:textSize="20dp"/>




        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                 android:id="@+id/popolnit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Пополнить"/>
            <Button
                android:id="@+id/perevesti"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Перевести"/>
        </LinearLayout>

        <Button
            android:id="@+id/historyopera"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="История операций"
            android:textAlignment="viewStart"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/zablok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заблокировать"
            android:textAlignment="viewStart"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/pereim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Переименовать"
            android:textAlignment="viewStart"
            android:textAllCaps="false" />





    </LinearLayout>


</LinearLayout>