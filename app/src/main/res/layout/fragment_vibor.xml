<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Account">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="52dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/Out"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/goback1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/Invsible"
            android:layout_gravity="clip_horizontal"
            app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds,MissingConstraints,VectorDrawableCompat" />

            <TextView
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_gravity="clip_horizontal"
        android:layout_marginEnd="25dp"
        android:text="Сергей Владимирович"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/account"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:textSize="20dp"
                android:textColor="@color/White"/>

    <ImageButton
        android:id="@+id/account"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/Invsible"
        app:srcCompat="@drawable/ic_person_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="Карта отправителя"
                android:textSize="20dp"/>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="1234****4321"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="40dp"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="12000,00 рублей"
                android:textSize="15dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="Карта отправителя"
                android:textSize="20dp"/>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="1234****4321"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="40dp"
                android:gravity="end"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="12000,00 рублей"
                android:textSize="15dp"/>
        </android.support.v7.widget.CardView>

        <EditText
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Введите сумму"/>

        <Button
            android:id="@+id/oplatit"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оплатить"/>



    </LinearLayout>

</LinearLayout>